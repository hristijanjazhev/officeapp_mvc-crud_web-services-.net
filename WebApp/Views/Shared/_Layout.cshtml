<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#cbd7a6">
    <div class="navbar navbar-inverse navbar-fixed-top " style="background-color:cadetblue;font-size:larger;">
        <div class="container">
            <div class="navbar-header bg-info">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<a class="navbar-brand" href="">
                    <img src="~/logos/robot.png" width="90" height="30" alt="Logo">
                </a>*@
                @Html.ActionLink("ASP.NET CRUD", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="test-link dropdown">@Html.ActionLink("Address", "Index", "Address")</li>
                    <li>@Html.ActionLink("Person", "Index", "Person")</li>
                    <li>@Html.ActionLink("Organization", "Index", "Organization")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Administrations <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <br />
                            <li>@Html.ActionLink("Notice", "Index", "Notice")</li>
                            <hr />
                            <li>@Html.ActionLink("Agreement", "Index", "Agreement")</li>
                            <hr />
                            <li>@Html.ActionLink("Offer", "Index", "Offer")</li>
                            <hr />
                            <li>@Html.ActionLink("Invoice", "Index", "Invoice")</li>
                            <hr />
                            <li>@Html.ActionLink("InvoiceItem", "Index", "InvoiceItem")</li>
                            <br />
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!--Dialog-->
    <div class="container body-content">
        <div id="myModalSuccess" class="modal fade text-width:30%" role="dialog">
            <div class="modal-dialog">
                <div class="model-content">
                    <div class="modal-header">
                        <h2>ALERT MESSAGE</h2>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div id="MyModalSuccessAlertBody" class="modal-body alert alert-success">
                    </div>
                    <div class="modal-footer">
                        &nbsp;
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CRUD Operations</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
